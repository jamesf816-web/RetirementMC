# engine/def457b_tables.py

def get_457b_factor(
    current_year: int,
    def457b_start_year: int | None = None,
    def457b_n_years: int = 1,
) -> float:
    """
    Returns the multiplier for 457b calculations.

    Parameters
    ----------
    current_year : int
        Current year
    def457b_start_year : int | None
        Used to determine if draws have begun
    def457b_n_years
        Number of years over which drawdown occurs

    Returns
    -------
    float
        def457b divisor for the given year.
    """
    end_year = def457b_start_year + def457b_n_years - 1
    years_remaining = end_year - current_year + 1 if current_year >= def457b_start_year else 0
    if years_remaining > 0:
        return 1 / years_remaining
    else:
        return 0.0
        
__all__ = ["get_def457b_factor"]
